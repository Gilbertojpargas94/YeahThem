<div class="form-container">
  <div style="margin-left: -25px;">
    <%= render 'partials/stepform', {one:"default", two:"current", three:"default"}%>
  </div>
  <%= form_with(model: company, local: true) do |form| %>
    <% if company.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(company.errors.count, "errores") %> no permiten registrar esta compa√±ia:</h2>

        <ul>
        <% company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="register-page">
      <div class="form-head">
        <h4 class="text-center" style="font-weight: bold;">Primero, vamos asegurarnos de que seas reconocido</h4>
        <h6 class="text-center text-secondary" style="font-weight: bold;">Esto ayudara a otras personas reconocer lo que haces</h6>
      </div>
      <div class="form-body">
        <div class="form-group">
          <%= form.label "Nombre de la empresa" %> <span class="custom-blue">*</span>
          <%= form.text_field :name, autofocus: true, autocomplete: "off", class:"form-control" %>
        </div>

        <div class="form-group">
          <%= form.label "Descripcion de la empresa" %> <span class="custom-blue">*</span>
          <%= form.text_area :description, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= form.label "Industria" %> <span class="custom-blue">*</span>
          <%= form.collection_select :industry_ids, Industry.all, :id, :name, {:prompt => 'Selecciona una industria'},{:class => 'form-control', :id => 'industry_selection'} %>
        </div>
        
        <div class="form-group">
          <%= form.label "Localidad" %> <span class="custom-blue">*</span>
          <%= form.text_field :address, class:"form-control" %>
        </div>

        <div class="actions form-group">
          <%= form.submit "Siguiente", class:"btn btn-c-blue" %> <span style="margin-left: 1em;" class="custom-blue">* Requerido</span>
        </div>
      </div>
    </div>
  <% end %>
</div>


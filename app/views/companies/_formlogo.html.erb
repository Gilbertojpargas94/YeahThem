<div class="form-container">
   <div style="margin-left: -25px;">
    <%= render 'partials/stepform', {one:"default", two:"default", three:"current"}%>
  </div>
  <%= form_with(model: company, local:true) do |form| %>
    <% if company.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

        <ul>
        <% company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
      
    <div class="register-page">
      <div class="form-head">
        <h4 class="text-center" style="font-weight: bold;">Añade un Logo</h4>
        <h6 class="text-center text-secondary" style="font-weight: bold;">Un logo te ayudará a que te reconozcan</h6>
      </div>
      <div class="form-body">
        <div class="form-group text-center image-upload">
            <div class="field">
              <label for="up_logo">
                <span style="font-size:3em;" class="custom-blue"><%= image_tag "upload_image.png" %></i></span>
              </label>
              <%= form.file_field :logo, id:"up_logo" %>
            </div>
            <%= form.label "Añadir logo", class:"text-secondary", id:"lbl_logo", style:"margin-left: 0.8em;"%>
        </div>
        <div class="actions form-group">
          <%= form.submit "Guardar", class:"btn btn-c-blue" %>
          <div class="btn btn-link" style="float: right;">
            <%= link_to  "Saltar", your_solutions_company_path(company), class:"text-default" %>
          </div>
        </div>
      </div>
    </div>
 <%end%>
</div>
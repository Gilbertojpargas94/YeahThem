<h1>Compa√±ias</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Logo</th>
      <th>Usuario</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Industria</th>
      <th>Direccion</th>
      <th>Total validation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= circle_img company.logo.url(:thumb), 100 %></td>
        <td><%= company.user.first_name %></td>
        <td><%= company.name %></td>
        <td><%= company.description %></td>
        <td><%= company.industries.first.name %></td>
        <td><%= company.address %></td>
        <td><%= company.total_validation %></td>
        <td><%= link_to 'Ver', company %></td>
        <td><%= link_to 'Editar', edit_company_path(company) %></td>
        <td><%= link_to 'Eliminar', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

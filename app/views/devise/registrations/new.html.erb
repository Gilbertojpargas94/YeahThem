<%= render 'partials/navbar' %>
<div class="container-fluid">
 <% if !notice.nil? %>
      <p id="notice" class="alert alert-success"><%= notice %></p>  
    <%elsif !alert.nil? %>
      <p id="notice" class="alert alert-danger" style="color: red"><%= alert %></p>  
  <%end%>
  <div class="row">
    <main class=" col-md-12 col-sm-height padding-main-log" style="padding-top:60px;">
      <h6 class="text-center acced-text">Atrae Nuevos Clientes</h6>
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-4 col-md-3 col-sm-2"></div>
          <div class="col-lg-4 col-md-6 col-sm-8 container-log bg-white">
              <article class="mb-5" style="background-color:#f2f2f2; margin: -25px -15px -5px -15px;padding-top: 25px;padding-bottom: 5px;">
                <h4 class="text-center">¿Comenzamos?</h4>
                <h6 class="text-center">Empeza ahora - es gratis</h6>
              </article>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-inputs text-center" style="font-weight: bold;">
                <div style="border-bottom: 2px solid #c0c0c0">
                  <%= f.text_field :first_name, autofocus: true, required: true, autocomplete: "off", class:"w-100 imputs-log", placeholder:"Nombre y Apellido" %>
                </div>
                <div style="border-bottom: 2px solid #c0c0c0">
                  <%= f.email_field :email , required: true, autofocus: true, label: "Correo", class: "w-100 imputs-log", style:"margin-top: 20px;", placeholder: "E-mail" %>
                </div>
                <div style="border-bottom: 2px solid #c0c0c0">
                   <%= f.password_field :password, required: true, label: "Contraseña", class: "w-100 imputs-log", style:"margin-top: 15px;", placeholder: "Contraseña (Mínimo #{ @minimum_password_length} Caracteres)" %>
                </div>
                <div style="border-bottom: 2px solid #c0c0c0">
                  <%= f.password_field :password_confirmation, required: true, autocomplete: "off", label: "Confirmar Contraseña", class: "w-100 imputs-log", style:"margin-top: 15px;", placeholder: "Confirmar Contraseña" %>
                </div>
              </div> 
              <div class="text-center" style="margin-top: 20px;">
                <p id="p-line" class="message">Registrándote aceptas nuestros
                  <%= link_to '', class: 'text-primary links-foot-registration', style: 'font-weight: bold' do %>
                    <span >Términos, </span>
                  <%end%>
                  <%= link_to '', class: 'text-primary links-foot-registration', style: 'font-weight: bold' do %>
                    <span>Politicas de Privacidad </span>
                  <%end%>
                  y Uso de
                  <%= link_to '', class: 'text-primary links-foot-registration', style: 'font-weight: bold' do %>
                    <span>Cookies.</span>
                  <%end%>
                </p>
              </div>             
              <div class="form-actions">
                <%= f.submit "Comenzar", class: "singup singup-submit w-100" %>
              </div>
            <% end %>
          </div>
          <div class="col-lg-4 col-md-3 col-sm-2"></div>
        </div>
      </div> 
    </main>
  </div>
</div>



































<div class="form-container">
  <div style="margin-left: -25px;">
  <%= render 'partials/stepform', {one:"current", two:"default", three:"default"}%>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <div class="register-page">
        <div class="form-head">
          <h2 class="text-center">Muestra tu trabajo</h2>
          <h5 class="text-center">Comienza hoy !Es gratis!</h5>
        </div>
        <div class="form-body">
          <div class="form-group">
            <%= f.label :Nombre %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "off", class:"form-control", placeholder:"Ingresa tu nombre" %>
          </div>
          <div class="form-group">
            <%= f.label :Apellido %>
            <%= f.text_field :last_name, autofocus: true, class:"form-control", placeholder:"Ingresa tu apellido" %>
          </div>
          <div class="form-group">
            <%= f.label :Correo %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"ejemplo@correo.com" %>
          </div>
          <div class="form-group">
            <%= f.label :Contraseña %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Confirmar contraseña" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
          </div>
          <div class="form-group">
            <p class="text-secondary">Haciendo click en Unete ahora, estarás de acuerdo con las politicas de privacidad 
            del usuario y el uso de Cookies. 
            </p>
          </div>
          <div class="actions form-group">
            <%= f.submit "¡Unete ahora!", class:"btn btn-c-blue btn-block" %>
          </div>
        </div>
      </div>
  <%end%>
</div>
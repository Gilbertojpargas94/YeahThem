<p id="notice"><%= notice %></p>

<h1>Industrias</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @industries.each do |industry| %>
      <tr>
        <td><%= industry.name %></td>
        <td><%= link_to 'Ver', industry %></td>
        <td><%= link_to 'Editar', edit_industry_path(industry) %></td>
        <td><%= link_to 'Eliminar', industry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


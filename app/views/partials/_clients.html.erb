            <div class="clints-company row">
              <div class="col-3" style="padding-right: 0px;">
                <% if client.image_url.nil? %>
                  <%= image_tag "missing_client.png", class: "img-clientes-solutions" %>
                <% else %>
                  <%= image_tag client.image_url, class:"img-clientes-solutions"%>
                <% end %>
              </div>
              <div class="container-clients-solution col" style="padding-right: 0px;
  padding-left: 10px;">
                <p class="p-solution_company" style="font-weight: bold; color: black;" ><%= client.name %> <%= client.last_name %></p>
                <p class="p-solution_company" style="color: black;"><%= client.company_name %></p>
                <p class="p-solution_company" style="font-weight: bold; color: black;"><%= client.title %></p>
              </div>

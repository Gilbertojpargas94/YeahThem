<article class="w-100 clients-solutions">
  <div class="row">
    <% if edit %>
      <p class="col-2 col-md-1" data-toggle="tooltip" title="Añade a un Cliente" id="share-edit-link" style="display: inline-block;">
        <%= link_to share_solution_path, id:"share-href",remote: true do %>
          <span style="font-size: 1.5em;"><i class="fa fa-plus"></i></span>
        <%end%>
      </p>
    <% end %>
    <div class="col-4 col-md-4" >
      <p class="subtitulo-company_solution" style="font-family: Segoe UI; font-size: 1rem;">Clientes</p>
    </div>
    <div class="col">                  
    </div>
  </div>
  <div class="row">
    <% if @clients.size  > 0 %>
      <% @clients.each_with_index do |client, i| %>
        <% if i < num %>

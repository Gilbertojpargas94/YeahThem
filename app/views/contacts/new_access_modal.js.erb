$('<%= j render "access_mailer"%>').on('shown.bs.modal', function (e) {
	$('#boton').click(function() {
    	var elem = document.getElementById("inputTel");
    	var re = /^[0-9-+ ()]*$/;
    	if(re.test(elem.value)){
	    	if ($('#inputName').val().length   >   0   &&
		        $('#inputEmail').val().length  >   0   &&
		        $('#inputTel').val().length    >   0) {
				// after all validations completed, close the modal
				setTimeout(function () {
		    		$('#access-modal').modal("hide");
		    		toastMessage();
		    	}, 1000);
			}
		}else{
			$('#inputTel').style.borderColor="red";
		}
	});

	$(this).on('hidden.bs.modal', function(e){
		$(this).remove();
		$('.modal-backdrop').remove();
	});
}).modal(); 
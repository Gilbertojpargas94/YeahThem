<div class="modal fade" id="access-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" style="padding: 30px;">
      <div class="modal-header">
        <h5 class="modal-title animated slideInDown delay-5s" id="exampleModalLongTitle">Solicitar acceso</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag(send_access_email_path, method: :post, remote: true, html: { id: "access-form" }) do %>
          <div class="form-group">
            <div class="col-sm-12">
              <%= text_field_tag 'company', nil, placeholder:"Â¿Como se llama tu empresa?", class: 'animated slideInDown delay-5s modal-input w-100 min-top-space', :required => true, id: "inputName"  %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <%= text_field_tag 'name', nil, placeholder:"Nombre completo", class: 'animated slideInDown delay-5s modal-input w-100 min-top-space', :required => true, id: "inputName"  %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <%= email_field_tag 'email', nil,  placeholder:"Email", class: 'animated slideInDown delay-5s modal-input w-100 min-top-space', :required => true, id: "inputEmail" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <%= text_field_tag 'phone_number',nil, placeholder:"Telefono", class: 'w-100 animated slideInDown delay-5s modal-input min-top-space', :required => true,  pattern: "^[0-9-+ ()]*$", id: "inputTel"  %>
            </div>
          </div>
          <div class="row">
            <%= submit_tag 'Enviar', class:"button-degree bg-success-custom animated slideInDown delay-5s", style:"margin-left: 1.8em;", id:"boton" %>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>